{
	"id": "com.fal.examples.github-commit-stats",
	"name": "GitHubコミット統計",
	"version": "1.0.0",
	"description": "GitHubコミット行数をカレンダーに表示し、ダッシュボードに統計を表示するプラグイン",
	"author": "F.A.L Team",
	"main": "src/index.ts",
	"extensionPoints": {
		"editor": true,
		"ui": true,
		"integration": true
	},
	"configSchema": {
		"type": "object",
		"properties": {
			"github_oauth_token": {
				"type": "string",
				"description": "GitHub認証トークン（Personal Access Token）",
				"ui:widget": "password",
				"required": true
			},
			"githubUser": {
				"type": "string",
				"description": "GitHubユーザー名（このユーザーのリポジトリを取得します）",
				"ui:widget": "githubUserSelector",
				"required": true
			},
			"selectedRepos": {
				"type": "string",
				"description": "監視するリポジトリ（複数選択可能）",
				"ui:widget": "githubRepoSelector",
				"required": true
			}
		},
		"required": ["github_oauth_token", "githubUser", "selectedRepos"]
	},
	"defaultConfig": {
		"github_oauth_token": "",
		"githubUser": "",
		"selectedRepos": "[]"
	},
	"keywords": ["github", "commits", "statistics", "calendar", "widget"]
}
