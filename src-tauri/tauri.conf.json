{
	"$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
	"productName": "For All Learners",
	"version": "0.3.0",
	"identifier": "com.saedgewell.for-all-learners",
	"build": {
		"frontendDist": "../out",
		"devUrl": "http://localhost:3000",
		"beforeDevCommand": "bun run dev:webpack",
		"beforeBuildCommand": "bun run scripts/prepare-static-export.ts prepare && cross-env ENABLE_STATIC_EXPORT=true bun run build && bun run scripts/prepare-static-export.ts restore"
	},
	"app": {
		"windows": [
			{
				"label": "main",
				"title": "For All Learners",
				"url": "dashboard",
				"width": 1400,
				"height": 900,
				"resizable": true,
				"fullscreen": false,
				"center": true
			}
		],
		"security": {
			"csp": null
		},
		"withGlobalTauri": true
	},
	"plugins": {
		"deep-link": {
			"schemes": ["tauri"]
		},
		"shell": {
			"open": true
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		]
	}
}
